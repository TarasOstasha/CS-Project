extends layout

block content
  .container(style='background:#fff;')
    .container-content(style="padding:20px;width:100%;max-width:500px;margin:0 auto;")
      .logo(style='text-align: center;')
          //- img(src='/assets/imgs/logo_1_.png' alt='logo')
          img(src='https://crystal-system-app.herokuapp.com/assets/images/Logo_1_.png' alt='logo')
      .title
          h3(style='color:#1ebf5e;text-align:center;') Your Appointment has been Confirmed!
      .confirmed-img(style='text-align: center;')
          img(src='https://crystal-system-app.herokuapp.com/assets/images/email-confirm.png' alt='email-confirm')
      p Hi #{client_name}, 
      p  Appointment confirmed with Crystal System Cleaning on #{time} at #{period}. Please find the details below:
      table(style="margin:0 auto;border:1px solid #0bb8e3")
        thead(style="background:#0bb8e3;color:#fff;")
          tr
            th(style="padding:15px;color:#fff;") Confirmed Time: #{time} at #{period}
        tbody
          tr
            td Type Of Service: #{cleaning_type}
          tr
            td Rooms: #{bedrooms}
          tr
            td Extras: #{extras}
          tr
            td Frequency: #{ frequency }
          tr
            td Total: $#{total}
      p Contact Us
      span Mon - Sun
      span 9am - 6pm
      br
      br
      p Crystal System Cleaning Corp.
      <a style="text-decoration:none;padding:10px;background:#18687f;color:#0bb8e3;" href="tel:3476060400" type="button">Call Us</a>
      <a style="text-decoration:none;padding:10px;background:#18687f;color:#0bb8e3;" href="mailto: crystalsystemcleaning@gmail.com" type="button">Send Email</a>
      <a style="text-decoration:none;padding:10px;background:#18687f;color:#0bb8e3;" href="www.crystalsystemnyc.com" type="button">Visit Our Web-Site</a>

        
